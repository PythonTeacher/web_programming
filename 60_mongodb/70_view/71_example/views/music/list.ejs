<!DOCTYPE html>
<html>
  <% include ../header %>
  <body>
    <% include ../menu %>
    <p><h3 class="section-heading">Music List</h3></p>    
    <div class="row row-cols-1 row-cols-md-5">
      <% result.forEach((m, index) => { %>
      <div class="col mb-4">
        <!-- Card -->
        <div class="card">
          <!--Card image-->
          <div class="view overlay">
            <img
              class="card-img-top"
              src="https://mdbootstrap.com/img/Photos/Others/images/16.jpg"
              alt="Card image cap"
            />
            <a href="#!">
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>

          <!--Card content-->
          <div class="card-body">
            <!--Title-->
            <h4 class="card-title"><%= m.singer %></h4>
            <!--Text-->
            <p class="card-text">
              <%= m.title %>
            </p>
            <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
            <button
              type="button"
              onclick="location.href='/api/music/<%=m.id%>'"
              class="btn btn-light-blue btn-md"
            >
              Read more
            </button>
          </div>
        </div>
        <!-- Card -->
      </div>
      <% }) %>
    </div>    
    <a href="/api/music/new" class="btn btn-primary">등록</a>
    <% include ../footer %>   
  </body>
</html>
